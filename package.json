{
    "name": "extract-mdx-metadata",
    "description": "Extract MDX metadata without using babel or webpack loaders.",
    "version": "1.0.0",
    "author": {
        "name": "Michael Novotny",
        "email": "manovotny@gmail.com",
        "url": "https://manovotny.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/manovotny/extract-mdx-metadata.git"
    },
    "keywords": [
        "extract",
        "markdown",
        "mdx",
        "mdx-js",
        "meta",
        "metadata"
    ],
    "engines": {
        "node": ">=10.0.0",
        "yarn": ">=1.0.0"
    },
    "main": "index.js",
    "scripts": {
        "coverage": "jest --coverage",
        "example": "node example/example.js",
        "lint": "eslint . --ext .json --ext .js",
        "prettier": "prettier --write \"**/*.{js,md,mdx,yml}\"",
        "test": "yarn lint && yarn coverage",
        "unit": "jest"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,md,mdx,yml}": [
            "prettier --write",
            "git add"
        ]
    },
    "dependencies": {
        "@babel/core": "7.3.4",
        "@babel/generator": "7.3.4",
        "@babel/parser": "7.3.4",
        "@babel/traverse": "7.3.4",
        "@mdx-js/mdx": "1.6.22",
        "unist-util-visit": "1.4.0"
    },
    "devDependencies": {
        "eslint": "4.19.1",
        "eslint-config-get-off-my-lawn-prettier": "1.0.0",
        "husky": "1.3.1",
        "jest": "24.5.0",
        "jest-haste-map": "24.5.0",
        "jest-resolve": "24.5.0",
        "jest-snapshot-serializer-raw": "1.1.0",
        "lint-staged": "8.1.5",
        "prettier": "1.16.4"
    }
}
