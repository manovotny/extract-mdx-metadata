{
    "name": "extract-mdx-metadata",
    "description": "Extract MDX metadata without using babel or webpack loaders.",
    "version": "2.0.0",
    "author": {
        "name": "Michael Novotny",
        "email": "manovotny@gmail.com",
        "url": "https://manovotny.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/manovotny/extract-mdx-metadata.git"
    },
    "keywords": [
        "extract",
        "markdown",
        "mdx",
        "mdx-js",
        "meta",
        "metadata"
    ],
    "engines": {
        "node": ">=12.20.0",
        "yarn": ">=1.0.0"
    },
    "main": "index.mjs",
    "scripts": {
        "coverage": "jest --coverage",
        "example": "node example/example.mjs",
        "lint": "eslint . --ext .json --ext .js",
        "prettier": "prettier --write --ignore-unknown .",
        "prettier-check": "prettier --check --ignore-unknown .",
        "test": "yarn lint && yarn prettier-check && yarn coverage",
        "unit": "jest"
    },
    "git": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*": [
            "prettier --write --ignore-unknown",
            "git add"
        ]
    },
    "dependencies": {
        "@babel/core": "7.15.0",
        "@babel/generator": "7.15.0",
        "@babel/parser": "7.15.0",
        "@babel/plugin-transform-modules-commonjs": "7.15.0",
        "@babel/preset-env": "7.15.0",
        "@babel/preset-react": "7.14.5",
        "@babel/traverse": "7.15.0",
        "@mdx-js/mdx": "1.6.22",
        "dot-prop": "6.0.1",
        "esbuild": "0.12.19",
        "esm": "3.2.25",
        "next": "11.0.1",
        "require-from-string": "2.0.2",
        "rollup": "2.56.1",
        "rollup-plugin-mdx": "0.1.0",
        "unist-util-visit": "2.0.3",
        "webpack": "5.49.0",
        "xdm": "1.12.2"
    },
    "devDependencies": {
        "@vercel/git-hooks": "1.0.0",
        "eslint": "7.22.0",
        "eslint-config-get-off-my-lawn": "6.0.1",
        "jest": "27.0.6",
        "jest-haste-map": "27.0.6",
        "jest-resolve": "27.0.6",
        "jest-snapshot-serializer-raw": "1.2.0",
        "lint-staged": "11.1.1",
        "prettier": "2.3.2",
        "prettier-config-get-off-my-lawn": "1.0.0"
    }
}
