{
    "name": "extract-mdx-metadata",
    "description": "Extract MDX metadata without using babel or webpack loaders.",
    "version": "1.0.0",
    "author": {
        "name": "Michael Novotny",
        "email": "manovotny@gmail.com",
        "url": "https://manovotny.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/manovotny/extract-mdx-metadata.git"
    },
    "keywords": [
        "extract",
        "markdown",
        "mdx",
        "mdx-js",
        "meta",
        "metadata"
    ],
    "engines": {
        "node": ">=10.0.0",
        "yarn": ">=1.0.0"
    },
    "main": "index.js",
    "scripts": {
        "coverage": "jest --coverage",
        "example": "node example/example.js",
        "lint": "eslint . --ext .json --ext .js",
        "prettier": "prettier --write --ignore-unknown .",
        "prettier-check": "prettier --check --ignore-unknown .",
        "test": "yarn lint && yarn prettier-check && yarn coverage",
        "unit": "jest"
    },
    "git": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*": [
            "prettier --write --ignore-unknown",
            "git add"
        ]
    },
    "dependencies": {
        "@babel/core": "7.3.4",
        "@babel/generator": "7.3.4",
        "@babel/parser": "7.3.4",
        "@babel/traverse": "7.3.4",
        "@mdx-js/mdx": "1.6.22",
        "unist-util-visit": "1.4.0"
    },
    "devDependencies": {
        "@vercel/git-hooks": "1.0.0",
        "eslint": "4.19.1",
        "eslint-config-get-off-my-lawn-prettier": "1.0.0",
        "jest": "24.5.0",
        "jest-haste-map": "24.5.0",
        "jest-resolve": "24.5.0",
        "jest-snapshot-serializer-raw": "1.1.0",
        "lint-staged": "11.1.1",
        "prettier": "2.3.2",
        "prettier-config-get-off-my-lawn": "1.0.0"
    }
}
